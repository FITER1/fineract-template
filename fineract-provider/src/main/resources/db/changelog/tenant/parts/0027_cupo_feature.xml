<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="fineract" id="1">
        <createTable tableName="m_cupo">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="amount_submitted" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>
            <column name="amount_approved" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
            <column name="expiration_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="approval_date" type="date" defaultValueComputed="NULL" />
            <column name="reject_date" type="date" defaultValueComputed="NULL" />
            <column name="client_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="group_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="status_enum" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount_available" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
            <column name="amount_in_hold" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
            <column name="amount" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="VARCHAR(3)" >
                <constraints nullable="false"/>
            </column>
            <column name="createdby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifiedby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="lastmodified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="2">
        <createTable tableName="m_cupo_transaction">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="cupo_id" type="BIGINT" >
                <constraints nullable="false" />
            </column>
            <column name="transaction_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_type_enum" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>
            <column name="is_reversed" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="loan_transaction_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="loan_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="createdby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifiedby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="lastmodified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="3" >
        <addColumn tableName="m_portfolio_account_associations">
            <column name="linked_cupo_id" type="BIGINT" defaultValueComputed="NULL"/>
        </addColumn>
    </changeSet>
    <changeSet author="fineract" id="4" >
