        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="REDUCTION_CUPO"/>
            <column name="entity_name" value="CUPO" />
            <column name="action_name" value="REDUCTION" />
            <column name="can_maker_checker" valueBoolean="true" />
        </insert>
    </changeSet>
    <changeSet author="fineract" id="5" >
        <addColumn tableName="m_organisation_currency">
            <column name="int_code" type="INT" defaultValueComputed="NULL" />
        </addColumn>
        <update tableName="m_organisation_currency">
            <column name="int_code" value="840"/>
            <where>code='USD'</where>
        </update>
    </changeSet>
    <changeSet author="fineract" id="6" >
        <addColumn tableName="m_currency">
            <column name="int_code" type="INT" defaultValueComputed="NULL" />
        </addColumn>
        <update tableName="m_currency">
            <column name="int_code" value="840"/>
            <where>code='USD'</where>
        </update>
    </changeSet>
    <changeSet author="fineract" id="7">
        <createTable tableName="m_exchange">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="MonedaDestino" type="INT" >
                <constraints nullable="false" />
            </column>
            <column name="MonedaOrigen" type="INT" >
                <constraints nullable="false" />
            </column>
            <column name="TipoCambio" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>
            <column name="AplicaDesde" type="date" defaultValueComputed="NULL" />
            <column name="FechaIngreso" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="UsuarioIngreso" type="BIGINT" defaultValueComputed="NULL" />
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="8">
        <createTable tableName="bitacora_master">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="transaction_date" type="date" defaultValueComputed="NULL" />
            <column name="transaction_type" type="VARCHAR(50)" defaultValueComputed="NULL" />
            <column name="account_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="transaction_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="account_type" type="VARCHAR(3)" defaultValueComputed="NULL" />
            <column name="client_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="currency" type="VARCHAR(3)" defaultValueComputed="NULL" />
            <column name="amount" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
            <column name="status" type="VARCHAR(8)" defaultValueComputed="NULL" />
            <column name="group_type" type="VARCHAR(4)" defaultValueComputed="NULL" />
            <column name="type_of_credit" type="VARCHAR(100)" defaultValueComputed="NULL" />
            <column name="category" type="VARCHAR(100)" defaultValueComputed="NULL" />
            <column name="type_of_client" type="VARCHAR(100)" defaultValueComputed="NULL" />
            <column name="reference" type="VARCHAR(25)" defaultValueComputed="NULL" />
            <column name="observations" type="VARCHAR(250)" defaultValueComputed="NULL" />
            <column name="created_date" type="datetime" defaultValueComputed="NULL" />
            <column name="createdby_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="lastmodified_date" type="datetime" defaultValueComputed="NULL" />
            <column name="lastmodifiedby_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="office_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="ip_dir" type="TEXT"/>
            <column name="terminal" type="TEXT"/>
            <column name="exchange_rate" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="9">
        <createTable tableName="bitacora_details">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="heading" type="VARCHAR(50)" defaultValueComputed="NULL" />
            <column name="amount" type="DECIMAL(19, 6)" defaultValueComputed="NULL" />
            <column name="causal" type="SMALLINT" defaultValueNumeric="999">
                <constraints nullable="false"/>
            </column>
            <column name="new_value" type="VARCHAR(25)" defaultValueComputed="NULL" />
            <column name="heading_code" type="INT" defaultValueComputed="NULL" />
            <column name="amount_type" type="VARCHAR(25)" defaultValueComputed="NULL" />
            <column name="destination_account" type="INT" defaultValueComputed="NULL" />
            <column name="destination_bank" type="INT" defaultValueComputed="NULL" />
            <column name="destination_client_type" type="VARCHAR(25)" defaultValueComputed="NULL" />
            <column name="bitacora_master_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime" defaultValueComputed="NULL" />
            <column name="createdby_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="lastmodified_date" type="datetime" defaultValueComputed="NULL" />
            <column name="lastmodifiedby_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="diferential" type="DECIMAL(19, 2)" defaultValueComputed="NULL" />
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="10">
        <insert tableName="stretchy_report">
            <column name="report_name" value="Bitacora Master"/>
            <column name="report_type" value="Table"/>
            <column name="report_subtype"/>
            <column name="report_sql" value="select * from bitacora_master order by id desc limit 200"/>
            <column name="description"/>
            <column name="core_report" valueBoolean="true"/>
            <column name="use_report" valueBoolean="true"/>
            <column name="self_service_user_report" valueBoolean="false"/>
        </insert>
        <insert tableName="stretchy_report">
            <column name="report_name" value="Bitacora Details"/>
            <column name="report_type" value="Table"/>
            <column name="report_subtype"/>
            <column name="report_sql" value="select * from bitacora_details order by id desc limit 200"/>
            <column name="description"/>
            <column name="core_report" valueBoolean="true"/>
            <column name="use_report" valueBoolean="true"/>
            <column name="self_service_user_report" valueBoolean="false"/>
        </insert>
    </changeSet>
</databaseChangeLog>
