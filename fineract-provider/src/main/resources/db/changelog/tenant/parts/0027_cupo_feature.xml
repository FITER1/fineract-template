            <column name="grouping" value="portfolio"/>
            <column name="code" value="UPDATE_CUPO"/>
            <column name="entity_name" value="CUPO" />
            <column name="action_name" value="UPDATE" />
            <column name="can_maker_checker" valueBoolean="true" />
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="APPROVE_CUPO"/>
            <column name="entity_name" value="CUPO" />
            <column name="action_name" value="APPROVE" />
            <column name="can_maker_checker" valueBoolean="true" />
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
